




      <div class="row">
        <div class='col-md-3 col-md-offset-4 text-center'>
                    <h1>sign in!</h1>
                      <%= form_for(:login, url: login_path) do | f | %>                  
                      <%= f.text_field :username, :placeholder => "username", class: "form control  text-center" %>
                      <br>
                      <%= f.password_field :password, :placeholder => "password", class: "form control text-center" %> 
                      <br>     
                      <%= f.submit "submit", :class => "btn btn-success"%>
          <% end %>
        </div>
      </div>


